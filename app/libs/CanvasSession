var mongoose = require('mongoose');

// Create a user model, _id will be automatically generated by Mongoose service
var canvasSessionSchema = new mongoose.Schema({
  canvasId: Number,
  users: { type: Object },
  dateCreated: Date,
  dateUpdated: Date,
  sessionProperties: { type: Object },
  canvasModel: { type: Object },
  canvasShapes: Array,
  messages: Array
});

// Make User available to rest of the application
module.exports = mongoose.model('CanvasSession', canvasSessionSchema);
